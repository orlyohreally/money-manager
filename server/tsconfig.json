{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es2017",
    "lib": ["es2017", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "__tests__/**/*", "../shared/**/*"]
}
